generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
  moduleFormat = "cjs"
}

datasource db {
  provider = "postgresql"
}

enum PaymentMethod {
  PIX
  CREDIT_CARD
}

enum PaymentStatus {
  PENDING
  PAID
  FAIL
}

model Payment {
  id            String        @id @default(uuid())
  external_reference String?       @unique
  cpf           String
  description   String
  amount        Decimal
  paymentMethod PaymentMethod
  status        PaymentStatus @default(PENDING)
  createdAt     DateTime      @default(now())
}
